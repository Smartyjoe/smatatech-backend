#==========================================================================
# SMATATECH LARAVEL API - PRODUCTION ENVIRONMENT CONFIGURATION
#==========================================================================
# This file is optimized for cPanel shared hosting deployment.
# Copy this file to .env and configure your values.
#==========================================================================

#--------------------------------------------------------------------------
# APPLICATION SETTINGS
#--------------------------------------------------------------------------
APP_NAME="Smatatech API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.smatatech.com.ng
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

#--------------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------------
BCRYPT_ROUNDS=12

#--------------------------------------------------------------------------
# LOGGING (File-based for shared hosting)
#--------------------------------------------------------------------------
LOG_CHANNEL=single
LOG_LEVEL=error

#--------------------------------------------------------------------------
# DATABASE (MySQL - cPanel)
#--------------------------------------------------------------------------
# Format for cPanel: cpanelusername_databasename
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_password

#--------------------------------------------------------------------------
# SESSION & CACHE (File-based - NO database dependency)
#--------------------------------------------------------------------------
# IMPORTANT: Use 'file' driver for shared hosting without Redis/Memcached
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

CACHE_STORE=file

#--------------------------------------------------------------------------
# QUEUE (Sync - No worker processes on shared hosting)
#--------------------------------------------------------------------------
QUEUE_CONNECTION=sync

#--------------------------------------------------------------------------
# FILESYSTEM
#--------------------------------------------------------------------------
FILESYSTEM_DISK=public

#--------------------------------------------------------------------------
# CORS - Frontend URLs
#--------------------------------------------------------------------------
# Add your frontend domains here (comma-separated for SANCTUM_STATEFUL_DOMAINS)
FRONTEND_URL=https://yourdomain.com
ADMIN_FRONTEND_URL=https://admin.yourdomain.com
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,admin.yourdomain.com,api.yourdomain.com

#--------------------------------------------------------------------------
# MAIL SETTINGS
#--------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=465
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

#--------------------------------------------------------------------------
# SANCTUM (API Authentication)
#--------------------------------------------------------------------------
SANCTUM_TOKEN_EXPIRATION=1440

#--------------------------------------------------------------------------
# INSTALLER SECURITY TOKEN
#--------------------------------------------------------------------------
# CHANGE THIS to a random string before uploading!
# Use this token to access install.php for database setup
INSTALL_TOKEN=change_this_to_random_string_2024

#--------------------------------------------------------------------------
# OPTIONAL: AWS S3 (for cloud storage)
#--------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------------
# AI CHATBOT CONFIGURATION (OpenRouter)
#--------------------------------------------------------------------------
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=
OPENROUTER_MODEL=qwen/qwen3-4b:free
CHATBOT_RATE_LIMIT=10
CHATBOT_MAX_TOKENS=500
CHATBOT_TEMPERATURE=0.7

#--------------------------------------------------------------------------
# BREVO (Email Marketing Integration)
#--------------------------------------------------------------------------
BREVO_API_KEY=

#--------------------------------------------------------------------------
# FEATURE FLAGS
#--------------------------------------------------------------------------
CHATBOT_ENABLED=false
NEWSLETTER_ENABLED=true
BLOG_ENABLED=true
